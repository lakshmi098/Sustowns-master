<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/squre_corner_with_white_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/rl_gallery"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gallery_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/gallery_1"/>
            <TextView
                android:id="@+id/take_from_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/gallery_icon"
                android:text="Select From Gallery"
                android:layout_centerInParent="true"
                android:textColor="#000"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="4dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/camera_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/photo_camera"/>
            <TextView
                android:id="@+id/take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capture Image"
                android:layout_toRightOf="@+id/camera_icon"
                android:padding="4dp"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="#000" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>