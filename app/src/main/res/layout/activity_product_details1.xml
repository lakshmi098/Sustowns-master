<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativelayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/appcolor"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:gravity="center"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/backarrow"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:src="@drawable/back_arrow_white" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Product Details"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <FrameLayout
                style="?attr/actionButtonStyle"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:layout_gravity="right"
                android:focusable="true">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="7dp"
                    android:id="@+id/cart_img"
                    android:padding="5dp"
                    android:src="@drawable/cart_icon"/>

                <TextView
                    android:id="@+id/cart_count"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/badge_circle"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    />
            </FrameLayout>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:visibility="gone" />
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_product_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_product_details"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/no_image_available" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="ProductName"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RatingBar
                    android:id="@+id/ratingBarProduct"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:padding="5dp"
                    android:progressTint="#FE980F"
                    android:stepSize="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/prod_price1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="18"
                                android:visibility="gone"
                                android:hint="123"
                                android:layout_marginLeft="5dp"
                                android:foreground="@drawable/strike_through"
                                android:textStyle="bold"
                                android:textColor="#7f7f7f"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Price"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/prod_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="20"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/ll_discount"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Discount"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/vendor_discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:ellipsize="end"
                                android:maxLength="18"
                                android:text="discount"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Quantity"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <EditText
                                android:id="@+id/edit_quantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_square_edges_drawable"
                                android:ellipsize="end"
                               android:maxLength="18"
                                android:padding="5dp"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Unit"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/prod_details_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="18"
                                android:padding="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/black" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Product Size"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/product_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="18"
                                android:padding="5dp"
                                android:text="***"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Packing Type"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/packing_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="18"
                                android:textSize="16sp"
                                android:padding="5dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Minimum Quantity"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/min_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="18"
                                android:padding="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Availability"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/availability_stock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="28"
                                android:padding="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Vendor"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:id="@+id/ll_vendor_link"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:orientation="vertical"
                                android:padding="3dp">

                                <TextView
                                    android:id="@+id/vendor_product_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:maxLength="18"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0.5dp"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginTop="3dp"
                                    android:background="@color/appcolor" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="58dp"
                                android:padding="5dp"
                                android:text="Delivery Lead Time               "
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=":"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/delivery_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLength="18"
                                android:padding="5dp"
                                android:textSize="16sp"
                                android:text=""
                                android:textColor="@color/black" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Transport Options"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                        <LinearLayout
                            android:id="@+id/ll_vendor_shipping1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="2dp">
                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                            <Spinner
                                android:id="@+id/spinner_thirdparty_shipping"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:padding="10dp"
                                android:spinnerMode="dropdown"></Spinner>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/black" />
                        <LinearLayout
                            android:id="@+id/ll_shipping_services"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:padding="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="Select Shipping Services"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/spinner_shipping_services"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:spinnerMode="dialog"></Spinner>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/black" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_select_shipping_services"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:padding="10dp"
                                android:spinnerMode="dropdown"></Spinner>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:layout_marginLeft="2dp"
                                android:visibility="gone"
                                android:layout_marginRight="15dp"
                                android:background="@color/black" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="Product Pickup Location"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/pick_up_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="pick up location"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:text="Product Drop Location"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/drop_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/change_address_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/backgroundapp_transparent_blue"
                                android:padding="5dp"
                                android:layout_gravity="right"
                                android:text="Change Address"
                                android:layout_marginRight="10dp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="Shipping Charge"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=":"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/shipping_charge_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:text="Product Total Price"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/product_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_square_edges_drawable"
                                android:ellipsize="end"
                                android:maxLength="18"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:text="product price"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/buy_sample"
                        android:layout_width="100dp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@color/yellow"
                        android:padding="5dp"
                        android:paddingBottom="10dp"
                        android:text="Buy Sample"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/make_offer"
                        android:layout_width="100dp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:paddingBottom="10dp"
                        android:background="@color/yellow"
                        android:padding="5dp"
                        android:text="Make Offer"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/addtocart"
                        android:layout_width="100dp"
                        android:layout_height="40sp"
                        android:layout_gravity="center"
                        android:paddingBottom="10dp"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/yellow"
                        android:padding="5dp"
                        android:text="Add To Cart"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/added_tocart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Added To Cart"
                        android:visibility="gone"
                        android:textColor="@color/yellow"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_descriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Click Here For   :  "
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews"
                        android:textColor="@color/yellow"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/descriptions_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="Descriptions"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/reviews_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="Reviews"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/reviews_count"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/review_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:overScrollMode="never">

                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/ll_product_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp">

                    <include layout="@layout/activity_product_reviews" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/image_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/no_image_available"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>