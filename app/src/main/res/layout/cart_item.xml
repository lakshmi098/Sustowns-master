<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:id="@+id/cart_prod_code"
                android:text="Product Id:"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/cart_image"
            android:src="@drawable/no_image_available"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/name_cart"
                android:text="Product1"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:src="@drawable/delete_icon"
                android:layout_marginRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/dollars_cart"
                android:text="$399"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/prod_price_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="18"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:foreground="@drawable/strike_through"
                android:textStyle="bold"
                android:textColor="#7f7f7f"
                android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Quantity : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <EditText
                    android:id="@+id/quantity_edit"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:focusableInTouchMode="false"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/app_background_drawble"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:inputType="numberDecimal" />
                <TextView
                    android:id="@+id/quantity_text"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:focusableInTouchMode="false"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/app_background_drawble"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:inputType="numberDecimal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_marginRight="20dp"
                    android:text="Remove"
                    android:id="@+id/remove_item"
                    android:textStyle="bold"
                    android:textColor="@color/appcolor"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:id="@+id/update_item"
                    android:text="Update "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:textColor="@color/appcolor"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="5dp"
                android:id="@+id/view"
                android:background="#474444"/>
            <LinearLayout
                android:id="@+id/shipping_cart_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:id="@+id/shipping_image"
                    android:src="@drawable/shipping_image"
                    android:scaleType="fitCenter"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Shipping Details"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:id="@+id/shipping_name"
                            android:text="Product1"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:id="@+id/ship_prod_code"
                        android:text="Product Id:"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_weight="1"
                            android:id="@+id/shipping_price"
                            android:text="$399"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="right"
                        android:id="@+id/remove_shipping_item"
                        android:layout_marginRight="15dp"
                        android:text="Remove"
                        android:textStyle="bold"
                        android:textColor="@color/appcolor"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>