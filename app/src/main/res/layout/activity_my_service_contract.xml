<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sustown.sustownsapp.Activities.MyProductContractActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appcolor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="#ffffff">

        <ImageView
            android:id="@+id/backarrow"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:padding="10dp"
            android:src="@drawable/back_arrow_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="My Service Contracts"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_service_contracts">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_pro_contracts">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:id="@+id/recycler_view_service_contracts"
                android:layout_margin="10dp">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Add Service Request"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:id="@+id/add_service_request"
                android:background="@drawable/backgroundapp_transparent_blue"
                android:textColor="@color/white"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_addservice_contracts"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:id="@+id/recycler_added_contracts"
            android:layout_margin="10dp">

        </android.support.v7.widget.RecyclerView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_marginBottom="20dp"
            android:overScrollMode="never">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="45dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/ll_my_Product_contracts"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="How Can We Help You Today ? "
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:gravity="center"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:layout_marginTop="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="Choose Category"
                                    android:textSize="16sp"
                                    android:layout_weight="1"
                                    android:textColor="@color/black"/>
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/spinner_choose_category"
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="5dp"
                                    android:spinnerMode="dialog">
                                </Spinner>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Service Name"
                                android:textColor="#000000"
                                android:background="@null"
                                android:textSize="16sp"
                                android:layout_gravity="left" />

                            <EditText
                                android:id="@+id/service_name_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:layout_marginRight="10dp"
                                android:textSize="16sp"
                                android:inputType="textPersonName" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Product Image"
                                android:textColor="#000000"
                                android:background="@null"
                                android:textSize="16sp"
                                android:layout_gravity="left" />
                            <Button
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:text="Choose File"
                                android:id="@+id/choose_pro_img"
                                android:textAllCaps="false"
                                android:layout_marginTop="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Documents"
                                android:textColor="#000000"
                                android:background="@null"
                                android:textSize="16sp"
                                android:layout_gravity="left" />
                            <Button
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:text="Choose File"
                                android:id="@+id/choose_document"
                                android:textAllCaps="false"
                                android:layout_marginTop="5dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Product ImageWhen should they start ? "
                                android:textColor="#000000"
                                android:background="@null"
                                android:textSize="16sp"
                                android:layout_gravity="left" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_margin="10dp">

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Im flexible"
                                    android:id="@+id/flexible_btn"
                                    android:textAllCaps="false"
                                    android:textSize="16sp"
                                    android:layout_weight="1"/>
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Within 48 hours"
                                    android:textSize="16sp"
                                    android:id="@+id/hours_btn"
                                    android:textAllCaps="false"
                                    android:layout_weight="1"/>
                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Specific date"
                                    android:id="@+id/specific_datebtn"
                                    android:textAllCaps="false"
                                    android:textSize="16sp"
                                    android:layout_weight="1"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginRight="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Unit"
                                        android:textSize="16sp"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"/>
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/spinner_unit"
                                        android:padding="10dp"
                                        android:layout_weight="1"
                                        android:layout_marginTop="5dp"
                                        android:spinnerMode="dialog">
                                    </Spinner>
                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="0.5dp"
                                        android:background="@color/black"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="7dp"/>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Quality Needed"
                                        android:textColor="#000000"
                                        android:background="@null"
                                        android:textSize="16sp"
                                        android:layout_gravity="left" />

                                    <EditText
                                        android:id="@+id/quality_needed_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:layout_marginRight="10dp"
                                        android:textSize="16sp"
                                        android:inputType="numberDecimal" />
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:text="Packing Requirements :"
                                android:textColor="#000000"
                                android:background="@null"
                                android:textSize="16sp"
                                android:layout_gravity="left" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginRight="10dp"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Packing Type"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"/>
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/spinner_packing_type"
                                        android:padding="10dp"
                                        android:layout_marginTop="5dp"
                                        android:spinnerMode="dialog">
                                    </Spinner>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.1dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@color/black"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Packing Sizes"
                                        android:textSize="16sp"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/black"/>
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/spinner_packsizes"
                                        android:padding="10dp"
                                        android:layout_weight="1"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:spinnerMode="dialog">
                                    </Spinner>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.1dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@color/black"/>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Length"
                                        android:textSize="16sp"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"/>

                                    <EditText
                                        android:id="@+id/length_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:layout_marginRight="10dp"
                                        android:textSize="16sp"
                                        android:inputType="numberDecimal" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Width"
                                        android:textSize="16sp"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"/>

                                    <EditText
                                        android:id="@+id/width_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:layout_marginRight="10dp"
                                        android:textSize="16sp"
                                        android:inputType="numberDecimal" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Height"
                                        android:textSize="16sp"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"/>

                                    <EditText
                                        android:id="@+id/height_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:layout_marginRight="10dp"
                                        android:textSize="16sp"
                                        android:inputType="numberDecimal" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginRight="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Product Tax"
                                        android:textSize="16sp"
                                        android:layout_weight="1"
                                        android:textColor="@color/black"/>

                                    <EditText
                                        android:id="@+id/pro_tax_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:layout_marginRight="10dp"
                                        android:textSize="16sp"
                                        android:inputType="numberDecimal" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="10dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Product Discount"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"/>

                                    <EditText
                                        android:id="@+id/pro_discount_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:layout_marginRight="10dp"
                                        android:textSize="16sp"
                                        android:inputType="numberDecimal" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginRight="10dp"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Link to order no"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"/>
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/spinner_link_order"
                                        android:padding="10dp"
                                        android:layout_marginTop="5dp"
                                        android:spinnerMode="dialog">
                                    </Spinner>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.1dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@color/black"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Delivery Term"
                                        android:textSize="16sp"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/black"/>
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/spinner_delivery_terms"
                                        android:padding="10dp"
                                        android:layout_weight="1"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:spinnerMode="dialog">
                                    </Spinner>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.1dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@color/black"/>
                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Address"
                                android:textColor="#000000"
                                android:background="@null"
                                android:textSize="16sp"
                                android:layout_gravity="left" />

                            <EditText
                                android:id="@+id/address_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:layout_marginRight="10dp"
                                android:textSize="16sp"
                                android:inputType="textPostalAddress" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginRight="10dp"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Country"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"/>
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/spinner_country"
                                        android:padding="10dp"
                                        android:layout_marginTop="5dp"
                                        android:spinnerMode="dialog">
                                    </Spinner>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.1dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@color/black"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="State"
                                        android:textSize="16sp"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/black"/>
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/spinner_state"
                                        android:padding="10dp"
                                        android:layout_weight="1"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:spinnerMode="dialog">
                                    </Spinner>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.1dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@color/black"/>
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginRight="10dp"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="City"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"/>
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/spinner_city"
                                        android:padding="10dp"
                                        android:layout_marginTop="5dp"
                                        android:spinnerMode="dialog">
                                    </Spinner>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.1dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@color/black"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:padding="5dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:text="Pincode"
                                        android:textSize="16sp"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/black"/>

                                    <EditText
                                        android:id="@+id/pincode_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:layout_marginRight="5dp"
                                        android:textSize="16sp"
                                        android:inputType="numberDecimal" />

                                </LinearLayout>

                            </LinearLayout>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
