            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Order Price"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=":"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
